{
  "name": "@whisky-gaming/core",
  "version": "1.0.0",
  "description": "Official TypeScript SDK for Whisky Gaming Protocol on Solana",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "docs": "typedoc src --out docs",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "solana",
    "anchor",
    "gaming",
    "defi",
    "blockchain",
    "web3",
    "crypto",
    "betting",
    "liquidity",
    "whisky",
    "provably-fair"
  ],
  "author": "Sarthak Kapila",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whisky-gaming/whisky-core"
  },
  "bugs": {
    "url": "https://github.com/whisky-gaming/whisky-core/issues"
  },
  "homepage": "https://whisky.casino",
  "dependencies": {
    "@coral-xyz/anchor": ">=0.31.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": ">=1.87.0",
    "big.js": "^6.2.1",
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/big.js": "^6.2.2",
    "@types/bn.js": "^5.1.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@coral-xyz/anchor": ">=0.31.0",
    "@solana/web3.js": ">=1.87.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
